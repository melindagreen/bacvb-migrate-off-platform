{
  // Always use your project formatter when saving
  "editor.formatOnSave": true,

  // Use Prettier in this workspace (see step 4)
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Only run Prettier if a config exists in the project (prevents personal Prettier defaults)
  "prettier.requireConfig": true,

  // Make VS Code respect .editorconfig for whitespace/newlines
  "editor.detectIndentation": false,

  // Optional: run “fixers” from installed linters on save (ESLint, Stylelint, etc.)
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "terminal.integrated.defaultProfile.linux": "zsh"
}
