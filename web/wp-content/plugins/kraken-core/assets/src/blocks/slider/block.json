{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "version": "1.0.1",
  "name": "kraken-core/slider",
  "title": "[Kraken] Slider",
  "description": "Slider using InnerBlocks & Swiper",
  "icon": "format-gallery",
  "category": "kraken-core",
  "render": "file:./render.php",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "viewScript": "file:./view.js",
  "style": "file:./style-view.css",
  "supports": {
    "anchor": true,
    "align": true
  },
  "attributes": {
    "anchor": {
      "type": "string",
      "default": ""
    },
    "sliderId": {
      "type": "string",
      "default": ""
    },
    "contentType": {
      "type": "string",
      "default": "automatic"
    },
    "galleryImages": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object"
      }
    },
    "galleryMaxHeight": {
      "type": "string",
      "default": "100%"
    },
    "postType": {
      "type": "string",
      "default": "post"
    },
    "postOrder": {
      "type": "string",
      "default": "date"
    },
    "enableTaxFilter": {
      "type": "boolean",
      "default": false
    },
    "taxonomyFilter": {
      "type": "string",
      "default": "category"
    },
    "taxonomyTerms": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object"
      }
    },
    "numberOfPosts": {
      "type": "number",
      "default": 5
    },
    "manualPosts": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object"
      }
    },
    "cardStyle": {
      "type": "string",
      "default": "default"
    },
    "displayAdditionalContent": {
      "type": "boolean",
      "default": false
    },
    "displayEventDate": {
      "type": "boolean",
      "default": false
    },
    "displayEventTime": {
      "type": "boolean",
      "default": false
    },
    "displayAddress": {
      "type": "boolean",
      "default": false
    },
    "displayExcerpt": {
      "type": "boolean",
      "default": false
    },
    "excerptLength": {
      "type": "number",
      "default": 12
    },
    "displayReadMore": {
      "type": "boolean",
      "default": false
    },
    "readMoreText": {
      "type": "string",
      "default": "Read More"
    },
    "enableCtaSlide": {
      "type": "boolean",
      "default": false
    },
    "ctaSlideTitle": {
      "type": "string",
      "default": ""
    },
    "ctaSlideImage": {
      "type": "number",
      "default": 0
    },
    "ctaSlideImageUrl": {
      "type": "string",
      "default": ""
    },
    "ctaSlideBtnText": {
      "type": "string",
      "default": ""
    },
    "ctaSlideBtnUrl": {
      "type": "object",
      "default": {}
    },
    "shuffleSlides": {
      "type": "boolean",
      "default": false
    },
    "enableMouseScroll": {
      "type": "boolean",
      "default": false
    },
    "enableAutoplay": {
      "type": "boolean",
      "default": false
    },
    "centeredSlides": {
      "type": "boolean",
      "default": false
    },
    "effect": {
      "type": "string",
      "default": "slide"
    },
    "loop": {
      "type": "boolean",
      "default": false
    },
    "freeMode": {
      "type": "boolean",
      "default": false
    },
    "initialSlide": {
      "type": "number",
      "default": 0
    },
    "sliderDirectionDesktop": {
      "type": "string",
      "default": "horizontal"
    },
    "sliderDirectionTablet": {
      "type": "string",
      "default": "horizontal"
    },
    "sliderDirectionMobile": {
      "type": "string",
      "default": "horizontal"
    },
    "enableArrowNavigation": {
      "type": "boolean",
      "default": true
    },
    "arrowsOutsideSlider": {
      "type": "boolean",
      "default": false
    },
    "arrowsBelowSlider": {
      "type": "boolean",
      "default": true
    },
    "enablePagination": {
      "type": "boolean",
      "default": true
    },
    "enableScrollbar": {
      "type": "boolean",
      "default": false
    },
    "enableGridRows": {
      "type": "boolean",
      "default": false
    },
    "gridRowsDesktop": {
      "type": "number",
      "default": 1
    },
    "gridRowsTablet": {
      "type": "number",
      "default": 1
    },
    "gridRowsMobile": {
      "type": "number",
      "default": 1
    },
    "enableSpaceBetween": {
      "type": "boolean",
      "default": false
    },
    "spaceBetweenDesktop": {
      "type": "number",
      "default": 20
    },
    "spaceBetweenTablet": {
      "type": "number",
      "default": 20
    },
    "spaceBetweenMobile": {
      "type": "number",
      "default": 15
    },
    "enableSlidesPerView": {
      "type": "boolean",
      "default": false
    },
    "enableSlidesPerViewAuto": {
      "type": "boolean",
      "default": false
    },
    "slidesPerViewDesktop": {
      "type": "number",
      "default": 4
    },
    "slidesPerViewTablet": {
      "type": "number",
      "default": 2
    },
    "slidesPerViewMobile": {
      "type": "number",
      "default": 1
    },
    "slidesPerViewWidthMobile": {
      "type": "string",
      "default": "300px"
    },
    "slidesPerViewWidthTablet": {
      "type": "string",
      "default": "300px"
    },
    "slidesPerViewWidthDesktop": {
      "type": "string",
      "default": "300px"
    },
    "enableEqualHeightSlides": {
      "type": "boolean",
      "default": false
    },
    "enableSlidesPerGroup": {
      "type": "boolean",
      "default": false
    },
    "enableSlidesPerGroupAuto": {
      "type": "boolean",
      "default": false
    },
    "slidesPerGroupDesktop": {
      "type": "number",
      "default": 4
    },
    "slidesPerGroupTablet": {
      "type": "number",
      "default": 2
    },
    "slidesPerGroupMobile": {
      "type": "number",
      "default": 1
    },
    "backgroundColor": {
      "type": "string",
      "default": ""
    },
    "textColor": {
      "type": "string",
      "default": ""
    },
    "arrowColor": {
      "type": "string",
      "default": ""
    },
    "arrowBackgroundColor": {
      "type": "string",
      "default": ""
    },
    "arrowBackgroundHoverColor": {
      "type": "string",
      "default": ""
    },
    "paginationColor": {
      "type": "string",
      "default": ""
    },
    "paginationActiveColor": {
      "type": "string",
      "default": ""
    },
    "scrollbarColor": {
      "type": "string",
      "default": ""
    },
    "mode": {
      "type": "string",
      "default": "edit"
    }
  }
}
