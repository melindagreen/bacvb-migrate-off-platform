{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "madden-theme/svg-border",
	"version": "1.0.0",
	"title": "[MM] SVG Border",
	"description": "Displays a svg border",
	"icon": "list-view",
	"category": "madden-media",
	"render": "file:./render.php",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"viewScript": "file:./view.js",
	"style": "file:./style-view.css",
	"supports": {
		"anchor": true,
		"align": ["full"],
		"color": {
			"background": true,
			"text": false
		},
		"spacing": {
			"margin": true
		}
	},
	"attributes": {
		"anchor": {
			"type": "string",
			"default": ""
		},
		"align": {
			"type": "string",
			"default": "full"
		},
		"backgroundColor": {
			"type": "string",
			"default": ""
		},
		"primaryColor": {
			"type": "string",
			"default": "black"
		},
		"secondaryColor": {
			"type": "string",
			"default": "red"
		},
		"tertiaryColor": {
			"type": "string",
			"default": "gray"
		},
		"borderStyle": {
			"type": "string",
			"default": "small-waves"
		},
		"flipY": {
			"type": "boolean",
			"default": false
		},
		"flipX": {
			"type": "boolean",
			"default": false
		},
		"positionZIndex": {
			"type": "number",
			"default": 0
		}
	}
}
