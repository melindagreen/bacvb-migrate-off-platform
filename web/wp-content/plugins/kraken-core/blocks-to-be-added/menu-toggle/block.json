{
  "apiVersion": 3,
  "name": "madden-theme/menu-toggle",
  "title": "[MM] Menu Toggle",
  "description": "Button that toggles a menu",
  "icon": "menu",
  "category": "text",
  "textdomain": "madden-theme",
  "version": "1.0.0",
  "attributes": {
    "mobileBreakpoint": {
      "type": "string",
      "default": "lg"
    },
    "menuLabel": {
      "type": "string",
      "default": "Toggle navigation"
    },
    "menuTarget": {
      "type": "string",
      "default": ""
    },
    "enableSearchToggle": {
      "type": "boolean",
      "default": false
    },
    "menuToggleColor": {
			"type": "string",
			"default": "black"
    },
    "menuToggleActiveColor": {
			"type": "string",
			"default": "red"
    }
  },
  "supports": {
    "layout": {
      "allowEditing": true,
      "allowOrientation": false,
      "default": {
        "type": "flex",
        "orientation": "horizontal"
      }
    },
    "typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalTextDecoration": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalWritingMode": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		}
	},
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
	"viewScript": "file:./view.js",
	"style": "file:./style-view.css",
  "render": "file:./render.php"
}