# .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default indentation (tweak to your taste)
indent_style = space
indent_size = 2

# Example: PHP uses tabs (common in WP/PHP shops)
[*.php]
indent_style = tab
tab_width = 4

# Don't strip trailing spaces in Markdown (keeps hard line breaks)
[*.md]
trim_trailing_whitespace = false
