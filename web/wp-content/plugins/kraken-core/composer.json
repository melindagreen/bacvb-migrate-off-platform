{
  "name": "maddenmedia/kraken-core",
  "description": "Madden Media Core Functionality",
  "type": "wordpress-plugin",
  "license": "proprietary",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "metaphorcreations/mtphr-settings": "v1.0.8"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:metaphorcreations/mtphr-settings.git"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "@copy-mtphr-settings"
    ],
    "post-update-cmd": [
      "@copy-mtphr-settings"
    ],
    "copy-mtphr-settings": [
      "php scripts/copy-mtphr-settings.php"
    ]
  }
}
