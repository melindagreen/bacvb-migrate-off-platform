{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "mm-bradentongulfislands/content-card",
	"version": "1.0.1d",
	"title": "Content Card",
	"description": "Display selected post or custom content in card format",
	"icon": "embed-photo",
	"category": "madden-media",
	"supports": {
		"anchor": true
	},
	"attributes": {
		"contentId": {
			"type": "number",
			"default": 0
		},
		"cardStyle": {
			"type": "string",
			"default": "portrait"
		},
		"contentType": {
			"type": "string",
			"default": "post"
		},
		"contentTitle": {
			"type": "string",
			"default": ""
		},
		"contentExcerpt": {
			"type": "string",
			"default": ""
		},
		"displayAdditionalContent": {
			"type": "boolean",
			"default": false
		},
		"displayExcerpt": {
			"type": "boolean",
			"default": false
		},
		"excerptLength": {
			"type": "number",
			"default": 12
		},
		"displayCategory": {
			"type": "boolean",
			"default": false
		},
		"displayReadMore": {
			"type": "boolean",
			"default": false
		},
		"readMoreText": {
			"type": "string",
			"default": "Read More"
		},
		"customImage": {
			"type": "number",
			"default": 0
		},
		"customImageUrl": {
			"type": "string",
			"default": ""
		},
		"customCtaText": {
			"type": "string",
			"default": ""
		},
		"customCtaUrl": {
			"type": "object",
			"default": {}
		},
		"mode": {
			"type": "string",
			"default": "edit"
		}
	},
	"example": {
		"attributes": {
			"contentId": 9184,
			"contentTitle": "Artwalk Event",
			"mode": "preview"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
