{
  "apiVersion": 2,
  "name": "wide-slideshow",
  "scripts": [
    "front.js"
  ],
  "settings": {
    "title": "Wide Slideshow",
    "description": "wide slideshow",
    "icon": "leftright",
    "category": "layout",
    "attributes": {
      "mediaId": {
        "type": "number",
        "default": 0
      },
      "mediaUrl": {
        "type": "array",
        "default": [],
        "selector": "img",
        "attribute": "src"
      },
      "mediaAlt": {
        "type": "string",
        "default": "",
        "selector": "img",
        "attribute": "alt"
      }
    }
  }
}