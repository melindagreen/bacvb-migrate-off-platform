{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"version": "1.0.0a",
	"name": "madden-theme/slider-pagination",
	"title": "[MM] Slider Controls",
	"description": "External controls (pagination dots, arrows) for any slider on the page",
	"icon": "ellipsis",
	"category": "madden-media",
	"render": "file:./render.php",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"viewScript": "file:./view.js",
	"style": "file:./style-view.css",
	"supports": {
		"anchor": true,
		"align": ["left", "center", "right"]
	},
	"attributes": {
		"blockId": {
			"type": "string",
			"default": ""
		},
		"selectedSlider": {
			"type": "number",
			"default": 0
		},
		"enablePagination": {
			"type": "boolean",
			"default": true
		},
		"enableArrows": {
			"type": "boolean",
			"default": true
		},
		"dotColor": {
			"type": "string",
			"default": ""
		},
		"dotColorActive": {
			"type": "string",
			"default": ""
		},
		"dotBorderColor": {
			"type": "string",
			"default": ""
		},
		"arrowColor": {
			"type": "string",
			"default": ""
		},
		"arrowBackgroundColor": {
			"type": "string",
			"default": ""
		},
		"arrowBorderColor": {
			"type": "string",
			"default": ""
		},
		"arrowStyle": {
			"type": "string",
			"default": "default"
		}
	}
}