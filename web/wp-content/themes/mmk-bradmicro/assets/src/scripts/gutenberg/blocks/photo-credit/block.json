{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "madden-theme/photo-credit",
	"version": "1.0.0a",
	"title": "[MM] Photo Credit",
	"description": "Add a photo credit",
	"category": "madden-media",
	"attributes": {
		"caption": {
			"type": "string",
			"default": ""
		},
		"textAlign": {
			"type": "string",
			"default": "left"
		}
	},
	"supports": {
		"color": {
			"gradients": false,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"viewStyle": "file:./view.js",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
