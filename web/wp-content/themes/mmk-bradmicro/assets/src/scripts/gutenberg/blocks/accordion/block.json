

{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "madden-theme/accordion",
  "title": "[MM] Accordion",
  "description": "An accordion with multiple collapsing sections",
  "icon": "list-view",
  "category": "madden-media",
  "version": "1.0.0",
  "attributes": {
    "openFirstItem": {
      "type": "boolean",
      "default": false
    },
    "autoCloseOthers": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "layout": {
      "allowEditing": false,
      "default": {
        "type": "flex",
        "orientation": "vertical",
        "justifyContent": "stretch"
      }
    },
		"spacing": {
			"margin": true,
			"padding": true,
      "blockGap": true,
			"__experimentalDefaultControls": {
				"padding": true,
				"blockGap": true
			}
		}
	},
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "viewScript": "file:./front.js",
  "style": "file:./style-index.css"
}