{
  "name": "maddenmedia/mm-platform-shell",
  "description": "WordPress Composer-ified. A template for managing WordPress core, plugins, and themes.",
  "type": "project",
  "keywords": [
    "wordpress",
    "blog",
    "cms",
    "template"
  ],
  "homepage": "https://github.com/platformsh/template-wordpress",
  "license": "GPL-2.0-or-later",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "git@github.com:platformsh/platformsh-config-reader-php.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:maddenmedia/partner-portal.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:maddenmedia/wp-plugin-eventastic.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:maddenmedia/wp-plugin-madden-banners.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:maddenmedia/mm-madre-theme.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:maddenmedia/mm-nino-theme"
    },
    {
      "type": "vcs",
      "url": "git@github.com:maddenmedia/wp-plugin-madden-cookie-consent.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:maddenmedia/wp-plugin-eventastic.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:maddenmedia/gravityforms.git"
    },
    {
      "type":"composer",
      "url":"https://connect.advancedcustomfields.com"
    },
    {
      "type": "package",
      "package": {
        "name": "rankmath/seo-by-rank-math-pro",
        "type": "wordpress-plugin",
        "version": "3.0.54",
        "dist": {
          "type": "zip",
          "url": "https://rankmath.com/download/510590/?username=madden%20media&api_key=8330bc817f11ccc9d602921e293ecd5b"
        },
        "require": {
          "composer/installers": "*"
        }
      }
    }
  ],
  "require": {
    "wpengine/advanced-custom-fields-pro": "^6.3.3",
    "davidbarratt/custom-installer": "^1.1",
    "johnpbloch/wordpress": "6.6.1",
    "maddenmedia/gravityforms": "*",
    "maddenmedia/madden-cookie-consent": "*",
    "maddenmedia/mm-madre-theme": "v1.4.5",
    "maddenmedia/wp-plugin-eventastic": "*",
    "maddenmedia/wp-plugin-madden-banners": "*",
    "platformsh/config-reader": "^2.0",
    "wp-media/wp-rocket": "^3.1",
    "psy/psysh": "^0.10.8",
    "tonik/cli": "^3.0",
    "maddenmedia/partner-portal": "*",
    "wp-cli/wp-cli-bundle": "^2.5",
    "wpackagist-plugin/akismet": "5.3.3",
    "wpackagist-plugin/broken-link-checker": "2.3.0",
    "wpackagist-plugin/cache-control": "^2.2",
    "wpackagist-plugin/duplicate-post": "^4.4",
    "wpackagist-plugin/enable-media-replace": "4.1.5",
    "wpackagist-plugin/force-regenerate-thumbnails": "2.1.4",
    "wpackagist-plugin/gravityforms-html5-validation": "^2.4.2",
    "wpackagist-plugin/post-expirator": "^3.4",
    "wpackagist-plugin/post-type-switcher": "^3.2.1",
    "wpackagist-plugin/really-simple-csv-importer": "^1.3",
    "wpackagist-plugin/redirection": "^5.5",
    "wpackagist-plugin/redis-cache": "2.5.3",
    "wpackagist-plugin/sa11y": "1.1.7",
    "wpackagist-plugin/safe-svg": "^2.1",
    "wpackagist-plugin/tiny-compress-images": "3.4.3",
    "wpackagist-plugin/translatepress-multilingual": "^2.8",
    "wpackagist-plugin/wordpress-importer": "0.8.2",
    "wpackagist-plugin/wordpress-seo": "^23.3",
    "wpackagist-plugin/wp-media-library-categories": "*",
    "wpackagist-plugin/seo-by-rank-math":"*",
    "rankmath/seo-by-rank-math-pro": "^3.0.54",
    "wpackagist-plugin/fareharbor": "^3.6"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "discard-changes": true,
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "ffraenz/private-composer-installer": true,
      "johnpbloch/wordpress-core-installer": true,
      "davidbarratt/custom-installer": true
    },
    "platform": {
      "php": "7.4.0"
  }
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "custom-installer": {
      "web/wp-content/themes/mm-nino-theme/assets/src/scripts/gutenberg/blocks/{$name}": [
        "type:mm-wordpress-block"
      ]
    },
    "installer-paths": {
      "web/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "web/wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ],
      "web/wp-content/mu-plugins/{$name}": [
        "type:wordpress-muplugin"
      ]
    }
  },
  "scripts": {
    "script": ".composer/script",
    "script:permit": "x=.composer/script; chmod -R +x $x ${x}s",
    "post-install-cmd": [
      "@script:permit",
      "@script move-wp",
      "@script install-wp-local-config"
    ],
    "post-update-cmd": [
      "@script move-wp"
    ],
    "build": "@script build",
    "build:parent": "@build build:parent",
    "build:child": "@build build:child",
    "watch": "@watch:child",
    "watch:parent": "@build watch:parent",
    "watch:child": "@build watch:child",
    "start": "@watch",
    "dev": "@watch",
    "prod": [
      "@build:parent",
      "@build:child"
    ],
    "production": "@prod",
    "install:child": "@script install-child",
    "install:node": "@script install-node",
    "platform": "@script platform-settings",
    "reinstall:parent": "@build reinstall:parent",
    "reinstall:child": "@build reinstall:child",
    "require-mm": "@script require-mm",
    "theme:dir": "@script theme-dir"
  }
}
